MDScreen:

    TextInput:
        id: num_input
        text: '0'
        font_size: 34
        multiline: False
        halign: 'right'
        size_hint: (.8, .19)
        pos_hint: {'center_x': .5, 'center_y': .7}
        background_color: (0, 0, 0, 0)
        foreground_color: (1, 1, 1, 1)
        readonly: True

