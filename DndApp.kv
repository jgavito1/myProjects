<ContentNavigationDrawer>:

    MDList:
        OneLineListItem:
            text: 'Dice Roller'
            on_press:
                root.nav_drawer.set_state('close')
                root.screen_manager.current = 'Dice Roller'
        
        OneLineListItem:
            text: 'Character Sheet'
            on_press:
                root.nav_drawer.set_state('close')
                root.screen_manager.current = 'Character Sheet'
        
        OneLineIconListItem:
            text: 'Close Window'
            on_press: 
                root.nav_drawer.set_state('close')
            IconLeftWidget:
                icon: 'keyboard-backspace'
                on_press:
                    root.nav_drawer.set_state('close')
MDNavigationLayout:

    MDScreenManager:
        id: screen_manager

        MDScreen:
            name: 'Dice Roller'

            MDBoxLayout:
                orientation: 'vertical'

                MDScreen:

                    MDTopAppBar:
                        elevation: 0
                        pos_hint: {"top": 1}
                        left_action_items:
                            [['menu', lambda x: nav_drawer.set_state("open")]]
                        md_bg_color: app.theme_cls.bg_normal
                        specific_text_color: 'gray'

                    MDTextField:
                        id: num_dice
                        hint_text: "Number of Dice"
                        input_filter: "int"
                        pos_hint: {'center_x': .5, 'center_y': .85}
                        size_hint_x: .9 
                        width: 300
                        hint_text_color_normal: 'gray'
                        line_color_normal: 'gray'
                        text_color_normal: 'gray'

                    MDFlatButton:
                        text: "1"
                        on_release: app.on_press_dice(self)
